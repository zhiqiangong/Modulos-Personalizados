<odoo>
    <record id="view_calendar_event_form_inherit" model="ir.ui.view">
        <field name="name">calendar.event.form.inherit</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Basic Property Information" name="basic_property_information">
                    <group>
                        <field name="rental_property_id"/>
                        <field name="rental_property_address"/>
                        <field name="rental_property_type"/>
                        <field name="rental_property_number_of_rooms"/>
                        <field name="rental_property_number_of_bathrooms"/>
                        <field name="rental_property_size_m2"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>